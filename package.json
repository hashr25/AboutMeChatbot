{
    "name": "fullstack-app",
    "version": "1.0.0",
    "scripts": {
        "start": "concurrently \"npm run start-client\" \"npm run start-server\"",
        "start-client": "cd client && ng serve --proxy-config proxy.conf.json",
        "start-server": "cd server && ts-node server.ts",
        "dev": "concurrently \"npm run dev-client\" \"npm run dev-server\"",
        "dev-client": "cd client && ng serve --proxy-config proxy.conf.json",
        "dev-server": "cd server && ts-node server.ts"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "openai": "^4.0.0"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    }
}